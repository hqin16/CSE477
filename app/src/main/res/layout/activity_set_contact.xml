<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#694489">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom|center_vertical"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal">
                <Button
                    android:id="@+id/button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="Connect"
                    android:gravity="center"
                    android:onClick="Call"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <Button
                    android:id="@+id/button2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/uwlogo"
                    android:text="Progress Report"
                    android:textSize="12.5sp"
                    android:gravity="center"
                    android:onClick="Call"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/button"
                    android:layout_toRightOf="@+id/button" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/uwlogo"
                    android:text="ME"
                    android:gravity="center"
                    android:onClick="Call"
                    android:layout_alignTop="@+id/button2"
                    android:layout_toEndOf="@+id/button2"
                    android:layout_toRightOf="@+id/button2"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/uwlogo"
                    android:text="Settings"
                    android:gravity="center"
                    android:onClick="Call"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/button4"
                    android:layout_toEndOf="@+id/button4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Number:"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:id="@+id/textView6"
                    android:layout_above="@+id/button11"
                    android:layout_alignRight="@+id/button5"
                    android:layout_alignEnd="@+id/button5" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/button11"
                    android:layout_alignTop="@+id/button13"
                    android:layout_alignRight="@+id/button5"
                    android:layout_alignEnd="@+id/button5"
                    android:layout_toRightOf="@+id/button13"
                    android:layout_toEndOf="@+id/button13" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/button13"
                    android:layout_above="@+id/button"
                    android:layout_alignLeft="@+id/button"
                    android:layout_alignStart="@+id/button"
                    android:layout_marginBottom="44dp"
                    android:layout_alignRight="@+id/button2"
                    android:layout_alignEnd="@+id/button2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Contact:"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_marginTop="86dp" />


            </RelativeLayout>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/uwlogo"
                android:background="@drawable/uwlogo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UW: B.A.C"
                android:id="@+id/TopLog"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle ="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/uwlogo"
                android:layout_alignBottom="@+id/uwlogo" />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>

