<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#191C59">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom|center_vertical"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal">
            <ImageButton
                android:id="@+id/button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Connect"
                android:background="@drawable/appbartimer"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/button2"
               />


            <ImageButton
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/appbarthermometer"
                android:text="Progress Report"
                android:textSize="12.5sp"
                android:gravity="center"
                android:onClick="progressReport"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/button"
                android:layout_toRightOf="@+id/button" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/appbaruser"
                android:text="ME"
                android:gravity="center"
                android:onClick="me"
                android:layout_alignTop="@+id/button2"
                android:layout_toEndOf="@+id/button2"
                android:layout_toRightOf="@+id/button2"/>

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/appbarsettings"
                android:text="Settings"
                android:gravity="center"
                android:onClick="settings"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button4"
                android:layout_toEndOf="@+id/button4" />


        </RelativeLayout>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/uwlogo"
                android:background="@drawable/uwlogo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/roundbutton"
                android:text="GET VALUE"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle ="bold"
                android:id="@+id/button3"
                android:layout_gravity="center"
                android:onClick="bluetoothConnect"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UW: B.A.C"
                android:id="@+id/TopLog"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle ="bold"
                android:layout_alignParentTop="true"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/uwlogo"
                android:layout_alignBottom="@+id/uwlogo" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
