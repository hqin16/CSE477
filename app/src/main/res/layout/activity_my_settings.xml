<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#191C59">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom|center_vertical"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Designated Driver"
                    android:id="@+id/button8"
                    android:onClick="setContact"
                    android:background="#7F81B1"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter My Local Bar"
                    android:id="@+id/button9"
                    android:onClick="address"
                    android:background="#7F81B1"
                    android:textColor="#FFFFFF"
                    android:layout_below="@+id/button8"
                    android:layout_marginTop="24dp"
                    android:layout_alignLeft="@+id/button8"
                    android:layout_alignStart="@+id/button8"
                    android:layout_alignRight="@+id/button8"
                    android:layout_alignEnd="@+id/button8" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polling Time"
                    android:id="@+id/button10"
                    android:onClick="setTime"
                    android:background="#7F81B1"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="24dp"
                    android:layout_below="@+id/button9"
                    android:layout_alignLeft="@+id/button9"
                    android:layout_alignStart="@+id/button9"
                    android:layout_alignRight="@+id/button9"
                    android:layout_alignEnd="@+id/button9" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/uwlogo"
                android:background="@drawable/uwlogo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:textColor="#FFFFFF"
                android:id="@+id/TopLog"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle ="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/uwlogo"
                android:layout_toEndOf="@+id/uwlogo"
                android:layout_alignBottom="@+id/uwlogo" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageButton
                android:id="@+id/button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/appbartimer"
                android:text="Connect"
                android:gravity="center"
                android:onClick="connect"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <ImageButton
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/appbarthermometer"
                android:text="Progress Report"
                android:textSize="12.5sp"
                android:gravity="center"
                android:onClick="progressReport"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/button"
                android:layout_toRightOf="@+id/button" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/appbaruser"
                android:text="ME"
                android:gravity="center"
                android:onClick="me"
                android:layout_alignTop="@+id/button2"
                android:layout_toEndOf="@+id/button2"
                android:layout_toRightOf="@+id/button2"/>

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/appbarsettings"
                android:text="Settings"
                android:gravity="center"

                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button4"
                android:layout_toEndOf="@+id/button4" />
         </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
