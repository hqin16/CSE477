<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom|center_vertical"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageButton
                    android:id="@+id/button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="Connect"
                    android:background="@drawable/connect"
                    android:gravity="center"
                    android:onClick="connect"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/pr"
                    android:text="Progress Report"
                    android:textSize="12.5sp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/button"
                    android:layout_toRightOf="@+id/button" />

                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/me"
                    android:text="ME"
                    android:gravity="center"
                    android:onClick="me"
                    android:layout_alignTop="@+id/button2"
                    android:layout_toEndOf="@+id/button2"
                    android:layout_toRightOf="@+id/button2"/>

                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/setting"
                    android:text="Settings"
                    android:gravity="center"
                    android:onClick="settings"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/button4"
                    android:layout_toEndOf="@+id/button4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Blood Alcohol Content:"
                    android:textColor="#000000"
                    android:id="@+id/textView"
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:layout_marginTop="113dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sober Time:"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Options:"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:text="Call Contact"
                    android:background="@drawable/call"
                    android:onClick="Call"
                    android:id="@+id/button6"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle ="bold"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="TBD"
                    android:textColor="#000000"
                    android:id="@+id/textView4"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignLeft="@+id/button6"
                    android:layout_alignStart="@+id/button6"
                    android:layout_alignRight="@+id/button5"
                    android:layout_alignEnd="@+id/button5" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="TBD"
                    android:textSize="20sp"
                    android:id="@+id/textView5"
                    android:layout_toRightOf="@+id/textView3"
                    android:layout_below="@+id/textView"
                    android:layout_alignRight="@+id/button4"
                    android:layout_alignEnd="@+id/button4" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/text"
                    android:text="Text Contact"
                    android:id="@+id/button7"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/button6"
                    android:layout_alignRight="@+id/textView"
                    android:layout_alignEnd="@+id/textView" />

            </RelativeLayout>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/uwlogo"
                android:background="@drawable/uwlogo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UW: B.A.C"
                android:textColor="#000000"
                android:id="@+id/TopLog"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle ="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/uwlogo"
                android:layout_alignBottom="@+id/uwlogo" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
