<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#694489">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom|center_vertical"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/TopLog"
                android:layout_alignEnd="@+id/TopLog">
                <Button
                    android:id="@+id/button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:gravity="top"
                    android:onClick="Call"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <Button
                    android:id="@+id/button2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/uwlogo"

                    android:gravity="top"
                    android:onClick="Call"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/button"
                    android:layout_toRightOf="@+id/button" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/uwlogo"
                    android:gravity="top"
                    android:onClick="Call"
                    android:layout_alignTop="@+id/button2"
                    android:layout_toEndOf="@+id/button2"
                    android:layout_toRightOf="@+id/button2"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/uwlogo"
                    android:gravity="top"
                    android:onClick="Call"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/button4"
                    android:layout_toEndOf="@+id/button4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Blood Alcohol Content:
                    "
                    android:id="@+id/textView"
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:layout_marginTop="113dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sober Time:                 "
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/textView"
                    android:layout_toLeftOf="@+id/button5"
                    android:layout_toStartOf="@+id/button5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Options:"
                    android:textSize="28sp"
                    android:textStyle ="bold"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView2"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="Call Contacts"
                    android:id="@+id/button6"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle ="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:text="New Text"
                    android:id="@+id/textView4"
                    android:layout_above="@+id/textView3"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView2"
                    android:layout_alignRight="@+id/button6"
                    android:layout_alignEnd="@+id/button6" />

            </RelativeLayout>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/uwlogo"
                android:background="@drawable/uwlogo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UW: B.A.C"
                android:id="@+id/TopLog"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle ="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/uwlogo"
                android:layout_alignBottom="@+id/uwlogo" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
